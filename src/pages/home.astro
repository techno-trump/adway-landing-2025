	<section id="advertise" class="sign-up sign-up_advertiser section-space" data-component=":intersection-observer:">
		<div class="container container_wide sign-up__container">
			<div class="sign-up__info">
				<h2 class="tg-section-title sign-up__title">Create campaign in under 5 minutes</h2>
				<div class="sign-up__msg tg-section-regular">We make campaign creation, tracking, editing and reporting intuitive and quick.</div>
				<a href="https://portal.adwayusa.com/signupadvertiser" class="btn btn_primary sign-up__btn">Sign Up as Advertiser</a>
			</div>
			<img alt="Learn, Graduate, Work" class="sign-up__img" src="img/admin-panel-demo.png">
		</div>
	</section>
	<section id="case-studies" class="case-studies section-space" data-component=":intersection-observer:">
		<div class="container container_wide case-studies__container">
			<h2 class="tg-section-title case-studies__title">Case studies:</h2>
			<div class="case-studies__list cases-grid">
				{
					cases.map(({ src, stack, name, desc, drawer, caseSrc }) => 
						<div class="case-study-card">
							<div class="case-study-card__img-area">
								<img alt="Learn, Graduate, Work" class="case-study-card__img" src={src}>
							</div>
							<div class="case-study-card__info">
								<div class="case-study-card__stack">{stack}</div>
								<div class="case-study-card__name">{name}</div>
								<div class="case-study-card__desc">{desc}</div>
							</div>
							<a href={caseSrc} data-fslightbox="cases" class="btn btn_primary case-study-card__btn" data-drawer-open={drawer}>Learn More</a>
						</div>)
				}
			</div>
		</div>
	</section>
	
	<section id="drive" class="sign-up sign-up_driver section-space" data-component=":intersection-observer:">
		<div class="container container_wide sign-up__container">
			<img alt="Driver" class="sign-up__img" src="img/driver.png">
			<div class="sign-up__info">
				<h2 class="tg-section-title sign-up__title">Drive with Adway</h2>
				<div class="sign-up__msg tg-section-regular">The more you drive, the more you earn. No wraps, toppers or hassle. Supercharge your income today. Download the app or apply here, now! </div>
				<a href="https://portal.adwayusa.com/signupdriver" class="btn btn_primary sign-up__btn">Sign up as Driver</a>
			</div>
		</div>
	</section>
	<section id="monetizing" class="monetizing section-space" data-component=":intersection-observer:">
		<div class="container container_wide monetizing__container">
			<h2 class="tg-section-title tg-section-title_margin">We make monetizing your ride easier than ever</h2>
			<div class="monetizing__text">
				<p>Take your date to dinner without showing how you pay for it!</p>
				<p>Use Adway projectors when you want to make money and store them in the trunk when they are not in use.</p>
			</div>
			<div class="pay-calc monetizing__calc">
				<div class="range">
					<div class="range__col range__col_hours">
						<div class="range__title">How long do you drive weekly ?</div>
						<div class="hours-wrapp">
							<div class="hours-wrapp__title">Hours</div>
							<div class="hours-wrapp__range">
								<input id="monetizing-hours" type="range" min="10" max="60" value="25" step="5" class="range-slider">
								<ul class="points">
									<li class="points__item" data-item="10">10</li>
									<li class="points__item" data-item="15">15</li>
									<li class="points__item" data-item="20">20</li>
									<li class="points__item" data-item="25">25</li>
									<li class="points__item" data-item="30">30</li>
									<li class="points__item" data-item="35">35</li>
									<li class="points__item" data-item="40">40</li>
									<li class="points__item" data-item="45">45</li>
									<li class="points__item" data-item="50">50</li>
									<li class="points__item" data-item="55">55</li>
									<li class="points__item" data-item="60">60</li>
								</ul>
							</div>
						</div>
					</div>
					<div class="range__col range__col_summ">
						<div class="range__total">$125-$150</div>
						<p class="range__paragraph">per week</p>
						<p class="range__paragraph">without stickers, wraps, or hassle</p>
					</div>
				</div>
			</div>
		</div>
	</section>
	<section id="technology" class="technology section-space">
		<div class="container container_wide technology__container">
			<h2 class="technology__title">How does it work</h2>
			<div class="technology__info">
				<div class="technology__msg tg-section-regular">Adway’s small and smart projectors are affixed to the side mirrors of rideshare and delivery cars, enabling Adway to dynamically serve static and video ads to the targeted areas in real time.</div>
			</div>
			<img alt="Technology" class="technology__img" src="img/car.gif">
		</div>
	</section>
	<section id="in-media" class="in-media section-space">
		<div class="container container_wide">
			<h2 class="tg-section-title tg-section-title_margin in-media__title">Adway in the Media:</h2>
			<div class="cases-grid in-media__body">
				{
					medias.map(item => <a href={item.href} target="_blank" class="media-card">
																<ImgWrap className='media-card__img img-wrap_cut'>
																	<img src={item.src} alt={item.title}>
																</ImgWrap>
																<div class="media-card__title">{item.title}</div>
															</a>)
				}
			</div>
		</div>
	</section>

	<div class="drawers" slot="drawers">
		{
			cases.map(({ drawer, caseSrc }) => <div class="case-drawer" data-drawer={drawer}>
														<div class="case-drawer__panel" data-elem="drawer.panel">
															<ImgWrap className='case-img case-drawer__img'>
																<img alt="Action Water" class="case-img__img" src={caseSrc}>
															</ImgWrap>
															<button class="close-btn case-drawer__close-btn" data-drawer-close={drawer}></button>
														</div>
												</div>)
		}
		<div class="drawer drawer_dialog drawer_error" data-drawer="subscription-error">
			<div class="drawer__panel" data-elem="drawer.panel">
				<div class="drawer__header">
					<div class="drawer__title">Error</div>
					<button class="close-btn close-btn_sm drawer__close-btn" data-drawer-close="subscription-error"></button>
				</div>
				<div class="drawer__body">
					Subscription failed.<br>
					Please try again later.<br>
					{"{{error-msg}}"}
				</div>
			</div>
		</div>
		<div class="drawer drawer_dialog drawer_success" data-drawer="subscription-success">
			<div class="drawer__panel" data-elem="drawer.panel">
				<div class="drawer__header">
					<div class="drawer__title">Success</div>
					<button class="close-btn close-btn_sm drawer__close-btn" data-drawer-close="subscription-success"></button>
				</div>
				<div class="drawer__body">
					Subscription successful!<br>You've been added to our mailing list.
				</div>
			</div>
		</div>
	</div>
</Layout>